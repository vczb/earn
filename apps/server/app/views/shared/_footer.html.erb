<footer class="relative bg-blueGray-200 pt-8 pb-6">
  <div class="bottom-auto top-0 left-0 right-0 w-full absolute pointer-events-none overflow-hidden -mt-20" style="height:80px"><svg class="absolute bottom-0 overflow-hidden" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" version="1.1" viewBox="0 0 2560 100" x="0" y="0">
      <polygon class="text-blueGray-200 fill-current" points="2560 0 2560 100 0 100">
      </polygon>
    </svg>
  </div>
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap">
      <div class="w-full md:w-6/12 px-4">
        <h4 class="text-3xl font-semibold">
          <%= t 'web.footer.title' %>
        </h4>
        <h5 class="text-lg mt-0 mb-2 text-blueGray-600">
          <%= t 'web.footer.subtitle' %>
        </h5>
        <div class="mt-6">
          <a href="/#" target="_blank">
            <i class="fab fa-twitter  bg-white text-lightBlue-400 shadow-lg font-lg p-3 items-center justify-center align-center rounded-full outline-none focus:outline-none mr-2 inline-block text-center">
            </i>
          </a>
          <a href="/#" target="_blank">
            <i class="fab fa-facebook-square bg-white text-lightBlue-600 shadow-lg font-lg p-3 items-center justify-center align-center rounded-full outline-none focus:outline-none mr-2 inline-block text-center">
            </i>
          </a>
          <a href="/#" target="_blank">
            <i class="fab fa-dribbble bg-white text-pink-400 shadow-lg font-lg p-3 items-center justify-center align-center rounded-full outline-none focus:outline-none mr-2 inline-block text-center">
            </i>
          </a>
          <a href="/#" target="_blank">
            <i class="fab fa-github bg-white text-blueGray-800 shadow-lg font-lg p-3 items-center justify-center align-center rounded-full outline-none focus:outline-none mr-2 inline-block text-center">
            </i>
          </a>
        </div>
      </div>
      <div class="w-full md:w-6/12 px-4">
        <div class="flex flex-wrap items-top mb-6">
          <div class="w-full md:w-6/12 xl:w-4/12 pt-6 md:pt-0 md:px-4 ml-auto">
            <span class="block uppercase text-blueGray-500 text-sm font-semibold mb-2">
              <%= t 'web.footer.menu.useful_links' %>
            </span>
            <ul class="list-unstyled">
              <li>
                <a class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm" href="/#" target="_blank">
                  <%= t 'web.footer.menu.about_us' %>
                </a>
              </li>
              <li>
                <a class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm" href="/#" target="_blank">
                  <%= t 'web.footer.menu.blog' %>
                </a>
              </li>
              <li>
                <li>
                  <a class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm" href="/#" target="_blank">
                    <%= t 'web.footer.menu.our_plans' %>
                  </a>
                </li>
              </ul>
            </div>
            <div class="w-full md:w-6/12 xl:w-4/12 pt-6 md:pt-0 md:px-4 ml-auto">
              <span class="block uppercase text-blueGray-500 text-sm font-semibold mb-2">
                <%= t 'web.footer.menu.other_resources' %>
              </span>
              <ul class="list-unstyled">
                <li>
                  <a class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm" href="/#" target="_blank">
                    <%= t 'web.footer.menu.terms' %>
                  </a>
                </li>
                <li>
                  <a class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm" href="/#" target="_blank">
                    <%= t 'web.footer.menu.privacy_policy' %>
                  </a>
                </li>
                <li>
                  <a class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm" href="/#" target="_blank">
                    <%= t 'web.footer.menu.contact_us' %>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <hr class="my-6 border-blueGray-300">
      <div class="flex flex-wrap items-center md:justify-between justify-center">
        <div class="w-full md:w-4/12 px-4 mx-auto text-center">
          <div class="text-sm text-blueGray-500 font-semibold py-1">
            <%= t 'web.footer.copyright' %>
          </div>
        </div>
      </div>
    </div>
  </footer>
