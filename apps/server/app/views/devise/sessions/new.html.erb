<main id="sign_in">
  <section class="w-full h-full bg-blueGray-800">
    <div class="relative pt-32 pb-32 flex content-center items-center justify-center" >
      <div class="w-full lg:w-4/12 px-4" >
        <div class="relative flex flex-col min-w-0 break-words w-full mt-10 mb-10  p-5 shadow-lg rounded-lg bg-blueGray-200">
          <h2 class="text-2xl font-semibold text-center text-blueGray-700 mb-5" >
            <%= t 'devise.sessions.new.sign_in' %>
          </h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.input :email,
                required: true,
                autofocus: true,
                label_html: { class: "form-label label-small" },
                input_html: { autocomplete: "email", class: 'form-text' } %>
            </div>
            <div class="form-group">
              <%= f.input :password,
                required: true,
                label_html: { class: "form-label label-small" },
                input_html: { autocomplete: "current-password", class: 'form-text' } %>
            </div>
            <div class="form-group">
              <%= f.input :remember_me,
                label_html: { class: "form-label label-small cursor-pointer" },
                input_html: { class: "mr-1 cursor-pointer" },
                as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-group">
              <%= f.button :submit, I18n.t('devise.sessions.new.sign_in'),
              class:  "btn btn-medium btn-dark w-full" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
</main>
