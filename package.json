{
  "name": "gamou",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0",
    "@rails/actioncable": "^6.0.0",
    "@rails/activestorage": "^6.0.0",
    "@rails/ujs": "^7.0.6",
    "@rails/webpacker": "5.4.4",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.2.15",
    "postcss-loader": "4.2.0",
    "sass-loader": "10.1.1",
    "tailwindcss": "^2.1.2",
    "turbolinks": "^5.2.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12"
  },
  "version": "0.1.0",
  "devDependencies": {
    "@prettier/plugin-ruby": "^1.6.1",
    "prettier": "^2.3.0",
    "prettier-plugin-erb": "^0.1.0",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "prettier:format": "prettier --write \"app/**/*.{rb, erb}\"",
    "prettier:check": "prettier -c \"app/**/*.{rb, erb}\"",
    "docker:build": "docker-compose build",
    "app:up": "docker-compose up rails",
    "app:down": "docker-compose down rails",
    "app:console": "docker-compose exec rails rails c",
    "app:migrate": "docker-compose exec rails rails db:migrate",
    "app:attach": "docker-compose up -d && docker attach gamou_app",
    "db:up": "docker-compose up -d database",
    "db:down": "docker-compose down database"
  }
}
