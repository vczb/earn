<main id="customer_index" class="bg-blueGray-800" >
  <section class="w-full h-full mx-auto py-40 container" style="min-height:75vh">
    <div class="container flex items-start flex-wrap  p-6 mt-16" >
      <div class="flex flex-wrap justify-center w-full">
        <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-blueGray-200">
          <div class="flex-auto p-5 lg:p-10">
            <h2 class="text-2xl font-semibold text-center text-blueGray-700 mb-5" >
              Hello, please input or email
            </h2>
            <%= simple_form_for(@customer, as: :customer,  url: new_customer_path, html: { method: :get }) do |f| %>
              <%= f.error_notification %>
              <div class="form-group">
                <%= f.input :email,
                required: true,
                autofocus: true,
                label_html: { class: "form-label label-small" },
                input_html: { class: "form-text"  } %>
              </div>
              <div class="form-group">
                <button name="commit" class="btn btn-medium btn-dark w-full" type="submit">
                  <%= I18n.t 'verbs.confirm' %>
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
